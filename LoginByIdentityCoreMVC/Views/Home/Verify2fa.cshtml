@using LoginByIdentityCoreMVC.ViewModels
@model Verify2faViewModel

<h2>Two-Factor Authentication</h2>
<p>Please enter the verification code from your authenticator app.</p>

@if ((Model?.IsDeviceRemembered).GetValueOrDefault())
{
    <p class="text-success">This device is remembered. You can proceed directly.</p>
}
else
{
    <form asp-controller="Home" asp-action="Verify2fa" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label for="Code">Verification Code:</label>
            <input type="text" asp-for="Code" class="form-control" required />
        </div>
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsDeviceRemembered" />
                <label class="form-check-label" asp-for="IsDeviceRemembered">Remember this device</label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Verify</button>
    </form>
}
